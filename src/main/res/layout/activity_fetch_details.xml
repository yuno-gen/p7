<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_dim"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center|top"
    tools:context=".FetchDetails">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="FETCH DETAILS"
        android:textColor="@color/purple_200"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: "
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/gray"
        android:background="@drawable/custom_tv"
        android:layout_marginTop="60dp"

        />

    <EditText
        android:id="@+id/fetchID"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:inputType="numberPassword"
        android:hint="Enter 8 Digit Unique ID"
        android:textColor="@color/teal_700"
        android:textSize="24sp"
        android:textColorHint="@color/teal_700"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="fetchData"
        android:text="Fetch Data"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_tv"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Your Details Here!"
                android:textColor="@color/purple_200"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>